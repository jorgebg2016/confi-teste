{
  "name": "confi/backend",
  "description": "Confi Teste - Backend API com Slim Framework e Doctrine",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "doctrine/dbal": "^4.2",
    "doctrine/migrations": "^3.8",
    "doctrine/orm": "^3.3",
    "monolog/monolog": "^3.7",
    "php-di/php-di": "^7.0",
    "respect/validation": "^2.4",
    "slim/psr7": "^1.7",
    "slim/slim": "^4.14",
    "symfony/cache": "^7.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "fakerphp/faker": "^1.24",
    "phpunit/phpunit": "^11.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "test": "phpunit"
  }
}
